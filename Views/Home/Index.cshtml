@model List<Producto>

@{
    ViewData["Title"] = "Busco";
}

<div class="text-center" style="margin-bottom: 3vw;">
    <h1 class="display-4" style="font-style: italic; font-weight: bold;">Solicitudes registradas en los ultimos 7 dias</h1>
</div>
@if(@Model.Count>0){
    <div class="row">
        @foreach (Producto producto in @Model)
        {
            <div class="col-md-4">
                <div class="card" style="width: 18rem; margin-bottom: 4vw; background-color: #80A984; opacity: 0.8;">
                    <div class="card-body" style="text-align: center;">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Nombre: </strong>@producto.name</li>
                            <li class="list-group-item"><strong>Descripción: </strong>@producto.description</li>
                            <li class="list-group-item"><strong>URL Foto: </strong>@producto.picURL</li>
                            <li class="list-group-item"><strong>Precio: </strong>@producto.price</li>
                            <li class="list-group-item"><strong>Celular: </strong>@producto.phone</li>
                            <li class="list-group-item"><strong>Lugar: </strong>@producto.place</li>
                            <li class="list-group-item"><strong>Usuario: </strong>@producto.userName</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}else{
    <div style="margin-top: 5vw;">
        <table>
            <tr>
                <td><img src="~/img/robot.png"></td>
                <td>
                    <h2 style="align-content: center;">Ups!<br>Al parecer no hay ninguna solicitud registrada</h2>
                    <a asp-action="Index" asp-controller="Solicitud" style="align: Center;"><button class="btn btn-danger">Añadir solicitud</button></a>
                </td>
            </tr>
        </table>
    </div>
}

